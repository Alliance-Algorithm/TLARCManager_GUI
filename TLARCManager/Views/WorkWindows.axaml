<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TLARCManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TLARCManager.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TLARCManager.Views.WorkWindows"
        x:DataType="vm:MainComponentsViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="TLARCManager">
  <DockPanel>
    <Border Height="25" Background="LightGray" BorderBrush="Black" BorderThickness="0" DockPanel.Dock="Top">
      <Menu>
        <MenuItem Header="_文件" >
          <MenuItem Header="_打开..." Click="OnOpenDirectClick"/>
          <MenuItem Header="_保存..." />
          <Separator/>
          <MenuItem Header="_退出" Click="OnExitClick"/>
        </MenuItem>
        <MenuItem Header="_编辑" >
          <Separator/>
        </MenuItem>
      </Menu>
    </Border>
    <Border Background="White" BorderBrush="Black" BorderThickness="0">
      <views:WorkSpace DataContext="{Binding Components}"/>
    </Border>
  </DockPanel>
</Window>
